<%
// the projects information of theme _config.yml.
var positions = page.myPositions.data;
%>
<div class="my-projects">
    <div class="title center-align" data-aos="zoom-in-up">
        <i class="fas fa-gift"></i>&nbsp;&nbsp;我们的岗位
    </div>
    <div class="row">
        <% if (positions) { %>
        <% Object.keys(positions).forEach(function(idx) { %>
        <div class="col s12 m6 l4" data-aos="fade-up">
            <div class="info center-align">
                <a class="icon"
                   style="background: <%- positions[idx].iconBackground %>" target="_blank">
                    <i class="<%- positions[idx].icon %>"></i>
                </a>
                <div class="info-title">
                    <a href="" target="_blank"><%- idx %></a>
                </div>
                <div class="info-desc"><%= positions[idx].desc %></div>
            </div>
        </div>
        <% }); %>
        <% } %>
    </div>
</div>
